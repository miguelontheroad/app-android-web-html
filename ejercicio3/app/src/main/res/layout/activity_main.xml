<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cat.lliuretic.odv.ejercicio3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/idAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPerson"
            android:text="AÃ±adir" />

        <Button
            android:id="@+id/idShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showAll"
            android:text="Mostrar" />

        <Button
            android:id="@+id/idFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="findPerson"
            android:text="Buscar" />

        <Button
            android:id="@+id/idSQL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showAllSQL"
            android:text="Mostrar Base de Datos" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
